<!DOCTYPE html>
<html>
  <head>
    <title>FishingRecord</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg ">
        <div class="container">
          <ul class = "navbar-nav ml-auto m-3">
            <% if user_signed_in? %>
              <li class="d-flex align-items-center mr-5">
                こんにちは、<%= current_user.name %>さん！
              </li>
              <li class="mr-3">
                <%= link_to "ホーム", root_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="mr-3">
                <%= link_to "釣果情報", posts_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="mr-3">
                <%= link_to "釣果投稿", new_post_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="mr-3">
                <%= link_to "マイページ", my_page_path, class: "btn btn-outline-dark" %>
              </li>
              <li class="mr-3">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark" %>
              </li>
            <% else %>
              <li class="mr-3">
                <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-dark" %>
              </li>
            <% end %>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

</html>
